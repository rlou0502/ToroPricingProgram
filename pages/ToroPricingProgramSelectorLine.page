<apex:page standardController="Toro_PricingProgramLine__c" extensions="ToroPricingProgramLineProductSelector">
<script>
var cleanSelectProductBox = function() {
	var elms = getElementsByClassName("select-product");
	for(var i=0; i < elms.length; i++) {
		elms[i].value="";
	}
};
</script>

<apex:form >
	<apex:pageBlock title="Select Product">
	<apex:pageBlockButtons >
			<apex:commandButton action="{!backToDetailPage}" value="Close" />
 		</apex:pageBlockButtons>
 		<apex:pageBlockSection title="Select Product" columns="1" id="selectProduct">
 			<apex:pageBlockSectionItem >
         		<apex:outputLabel value="Select a product" />
            		<apex:inputField html-class="select-product" value="{!dummyProduct.Id}">
            			<apex:actionSupport event="onchange" rerender="selectedProductSection" action="{!addProduct}" oncomplete="cleanSelectProductBox();" />
            		</apex:inputField>
         	</apex:pageBlockSectionItem>
         	<apex:pageBlockSectionItem >
         		<apex:outputLabel value="Select all products" />
         		<apex:inputcheckbox value="{!allProductsSelected}">
					<apex:actionSupport event="onclick" action="{!toggleAllProducts}" rerender="selectedProductSection"/>
				</apex:inputcheckbox>
         	</apex:pageBlockSectionItem>
 		</apex:pageBlockSection>
		<apex:pageBlockSection title="Selected Product(s)" columns="1" id="selectedProductSection" rendered="{!IF(allProductsSelected,false,true)}">
			<apex:pageBlockTable value="{!selectedProducts}" var="selProd">
				<apex:column >
					<apex:facet name="header">Del</apex:facet>
					<apex:commandbutton image="/img/func_icons/remove12_on.gif" id="delete_this" reRender="selectedProductSection" action="{!deleteProduct}">
						<apex:param name="sku" value="{!selProd.prod}" assignTo="{!toBeDeleted}"/>
					</apex:commandbutton>
				</apex:column>
				<apex:column >
					<apex:facet name="header">Name</apex:facet>
					<apex:outputText value="{!selProd.prodName}" />
				</apex:column>
				<apex:column >
					<apex:facet name="header">Id</apex:facet>
					<apex:outputText value="{!selProd.prod}" />
				</apex:column>
			</apex:pageBlockTable>
		</apex:pageBlockSection>
	</apex:pageBlock>
	</apex:form>
</apex:page>